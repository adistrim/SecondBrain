{
  "name": "server",
  "version": "0.0.0",
  "main": "src/index.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:local": "node dist/dev.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/dev.ts\"",
    "typecheck": "tsc --noEmit",
    "db:generate": "npx drizzle-kit generate",
    "db:push": "npx drizzle-kit migrate"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@vercel/node": "^5.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.0",
    "zod": "^3.25.67"
  }
